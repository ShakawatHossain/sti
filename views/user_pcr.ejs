          <div class="col-md-4">
            <div class="card card-user">
              <div class="image">
                <img src="/assets/img/bg5.jpg" alt="...">
              </div>
              <div class="card-body">
                <div class="author">
                  
                    <img class="avatar border-gray" src="/assets/img/mike.jpg" alt="...">
                    <h5 class="title"><%=row[0].demo_name%></h5>
                  
                  <p class="description">
                    Age <%=row[0].demo_age%></br>
                    Case ID<%=row[0].main_case_id%><br/>
                    SCD <%=row[0].main_in_date%>
                  </p>
                </div>
                <h5 class="title text-center">Provisional diagnosis</h5>
                <p class="description text-center">
                  <%= row[0].visit_pd_uds==1?"Urethral discharge syndrome":" " %>
                  <%= row[0].visit_pd_vds==1?"Vaginal discharge syndrome":" " %>
