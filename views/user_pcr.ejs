                                    <input class="form-check-input" type="checkbox" id="hsv2" name="hsv2" value="hsv2">
                                    <span class="form-check-sign"></span>
                                  </label>
                                </div>
                              </td>
                              <td class="text-left">HSV-2</td>
                            </tr>
                          </tbody>
                        </table>
