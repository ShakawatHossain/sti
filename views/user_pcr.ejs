                                  <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" id="tva" name="tva" value="tva">
                                    <span class="form-check-sign"></span>
                                  </label>
                                </div>
                              </td>
                              <td class="text-left">T. vaginalis</td>
                            </tr>
                            <tr>
                              <td>
                                <div class="form-check">
                                  <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" id="hsv1" name="hsv1" value="hsv1">
                                    <span class="form-check-sign"></span>
                                  </label>
                                </div>
                              </td>
                              <td class="text-left">HSV-1</td>
                            </tr>
                            <tr>
                              <td>
                                <div class="form-check">
