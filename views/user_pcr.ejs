      <div class="content">
        <div class="row">
          <div class="col-md-8">
            <div class="card">
              <div class="card-header">
                <h5 class="title">PCR result entry</h5>
              </div>
              <div class="card-body">
                <form action="pcr_sample?no=<%=id%>" method="post">
                  <div class="row">
                    <div class="col-md-6 pr-1">
                      <div class="form-group">
                        <label>Type of STI</label>
                        <select name="sti_type" id="sti_type" class="form-control">
                          <option value="1">STI 1</option>
                          <option value="2">STI 2</option>
                          <option value="3">STI 3</option>
                          <option value="4">STI 4</option>
                          <option value="5">STI 5</option>
                          <option value="6">STI 6</option>
                        </select>
                      </div>
                    </div>
                    <div class="col-md-6 px-1">
                      <div class="form-group">
                        <label>STI pathogens</label>
                        <!--  -->
                        <table class="table">
                          <tbody>
                            <tr>
                              <td>
                                <div class="form-check">
                                  <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" id="ngo" name="ngo" value="ngo">
                                    <span class="form-check-sign"></span>
                                  </label>
                                </div>
                              </td>
                              <td class="text-left">N. gonorrhoea</td>
                            </tr>
                            <tr>
                              <td>
                                <div class="form-check">
                                  <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" id="ctr" name="ctr" value="ctr">
                                    <span class="form-check-sign"></span>
                                  </label>
                                </div>
                              </td>
                              <td class="text-left">C. trachomatis</td>
                            </tr>
                            <tr>
                              <td>
                                <div class="form-check">
                                  <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" id="tpa" name="tpa" value="tpa">
                                    <span class="form-check-sign"></span>
                                  </label>
                                </div>
                              </td>
                              <td class="text-left">T. pallindum</td>
                            </tr>
                            <tr>
                              <td>
                                <div class="form-check">
                                  <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" id="mge" name="mge" value="mge">
                                    <span class="form-check-sign"></span>
                                  </label>
                                </div>
                              </td>
                              <td class="text-left">M. genitalium</td>
                            </tr>
                            <tr>
                              <td>
                                <div class="form-check">
                                  <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" id="mho" name="mho" value="mho">
                                    <span class="form-check-sign"></span>
                                  </label>
                                </div>
                              </td>
                              <td class="text-left">M. hominis</td>
                            </tr>
                            <tr>
                              <td>
                                <div class="form-check">
                                  <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" id="uur" name="uur" value="uur">
                                    <span class="form-check-sign"></span>
                                  </label>
                                </div>
                              </td>
                              <td class="text-left">U. urealyticum</td>
                            </tr>
                            <tr>
                              <td>
                                <div class="form-check">
                                  <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" id="upa" name="upa" value="upa">
                                    <span class="form-check-sign"></span>
                                  </label>
                                </div>
                              </td>
                              <td class="text-left">U. parvum</td>
                            </tr>
                            <tr>
                              <td>
                                <div class="form-check">
                                  <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" id="gva" name="gva" value="gva">
                                    <span class="form-check-sign"></span>
                                  </label>
                                </div>
                              </td>
                              <td class="text-left">G. vaginalis</td>
                            </tr>
                            <tr>
                              <td>
